{
    "openapi": "3.0.0",
    "info": {
        "title": "Api PrimeTech E-commerce",
        "description": "API do projeto PrimeTech E-commerce desenvolvida utilizando o NodeJs, ExpressJs e o Banco de dados MongoDB. Foi realizada a integração com o PagSeguro.",
        "contact": {
            "email": "daniel80barboza@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3011/v1",
            "description": "Api de teste"
        }
    ],
    "paths": {
        "/auth": {
            "post": {
                "summary": "Logar usuário",
                "description": "Essa rota é responsável por autenticar o usuário",
                "tags": [
                    "Autenticar Usuário"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Auth"
                            },
                            "examples": {
                                "auth": {
                                    "value": {
                                        "email": "daniel95barboza@gmail.com",
                                        "password": "daniel"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error!"
                    },
                    "401": {
                        "description": "E-mail e/ou senha inválidos!"
                    },
                    "200": {
                        "description": "User authenticated successfully!"
                    }
                }
            }
        },
        "/check-token": {
            "post": {
                "summary": "Verificar token",
                "description": "Essa rota é responsável por verificar o token do usuário",
                "tags": [
                    "Autenticar Usuário"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CheckToken"
                            },
                            "examples": {
                                "CheckToken": {
                                    "value": {
                                        "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYzMWUwMjc4ZWM5ZjQ2YzFkYTRkOTMzYSIsIm5hbWUiOiJEYW5pZWwgQmFyYm96YSIsImVtYWlsIjoiZGFuaWVsYmFyYm96YTU2QGhvdG1haWwuY29tIiwicGVybWlzc2lvbnMiOlsiYWRtaW5pc3RyYXRvciJdLCJpYXQiOjE2Njk0ODIxMjgsImV4cCI6MTAwMTY2OTQ4MjEyN30.a6SFqoFf7xF-VgOSnTHyhbl4D69uGfp1DC7XU9Q5-QA"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error!"
                    },
                    "401": {
                        "description": "Token invalid!"
                    },
                    "200": {
                        "description": "Token valid!"
                    }
                }
            }
        },
        "/refresh-token": {
            "post": {
                "summary": "Gerar refresh token",
                "description": "Essa rota é responsável por gerar o refresh token",
                "tags": [
                    "Autenticar Usuário"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RefreshToken"
                            },
                            "examples": {
                                "RefreshToken": {
                                    "value": {
                                        "token": "f30e496f-8d8b-4408-93e0-ba2c87df4577"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error!"
                    },
                    "401": {
                        "description": "Refresh token invalid!"
                    },
                    "200": {
                        "description": "Refresh token generated successfully!"
                    }
                }
            }
        },
        "/user/recovery/password-recovery": {
            "put": {
                "summary": "Gerar token de recuperação de senha",
                "description": "Essa rota é responsável por enviar para o e-mail do usuário um token",
                "tags": [
                    "Autenticar Usuário"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordRecovery"
                            },
                            "examples": {
                                "PasswordRecovery": {
                                    "value": {
                                        "email": "daniel95barboza@gmail.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error!"
                    },
                    "404": {
                        "description": "E-mail inválido!"
                    },
                    "200": {
                        "description": "Email successfully sent"
                    }
                }
            }
        },
        "/user/recovery/reset-password": {
            "put": {
                "summary": "Redefinir a senha",
                "description": "Essa rota é responsável por redefinir a senha do usuário",
                "tags": [
                    "Autenticar Usuário"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ResetPassword"
                            },
                            "examples": {
                                "ResetPassword": {
                                    "value": {
                                        "token": "f30e496f-8d8b-4408-93e0-ba2c87df4577",
                                        "email": "daniel95barboza@gmail.com",
                                        "newPassword": "daniel"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": {
                        "description": "Internal Server Error!"
                    },
                    "404": {
                        "description": "Token inválido!"
                    },
                    "200": {
                        "description": "Password updated successfully"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Auth": {
                "type": "object",
                "properties": {
                    "cpf": {
                        "type": "string",
                        "required": true
                    },
                    "password": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "CheckToken": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "RefreshToken": {
                "properties": {
                    "token": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "PasswordRecovery": {
                "properties": {
                    "email": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "ResetPassword":{
                "properties": {
                    "token": {
                        "type": "string",
                        "required": true
                    },
                    "email": {
                        "type": "string",
                        "required": true
                    },
                    "newPassword": {
                        "type": "string",
                        "required": true
                    }
                }
            }
        },
        "securityDefinitions": {
            "JWT": {
                "description": "JWT token",
                "type": "apiKey",
                "in": "header",
                "name": "Authorization"
            }
        }
    }
}