    "components": {
        "schemas": {
            "Auth": {
                "type": "object",
                "properties": {
                    "cpf": {
                        "type": "string",
                        "required": true
                    },
                    "password": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "CheckToken": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "required": true
                    }
