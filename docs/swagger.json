                        "type": "string",
                        "required": true
                    },
                    "newPassword": {
                        "type": "string",
                        "required": true
                    }
                }
            },
            "Register_Category": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "required": true,
                        "example": "exemplo"
                    },
                    "code": {
                        "type": "string",
                        "required": true,
                        "example": "74635224441223"
                    },
                    "files": {
                        "type": "string",
                        "required": false,
                        "format": "binary"
                    }
                }
            },
            "Register_Product": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "required": true,
                        "example": "exemplo"
                    },
                    "description": {
                        "type": "string",
                        "required": true,
                        "example": "exemplo description"
                    },
                    "price": {
                        "type": "number",
                        "required": true,
                        "example": 18.5
                    },
                    "promotion": {
                        "type": "number",
                        "required": true,
                        "example": 16.5
                    },
                    "sku": {
                        "type": "string",
                        "required": true,
                        "example": "a1b1c1"
                    },
                    "quantity": {
                        "type": "integer",
                        "required": true,
                        "example": 20
                    },
                    "category": {
                        "type": "string",
                        "required": true,
                        "example": "6320f577156b47ff1082586e"
                    },
                    "weight": {
                        "type": "number",
                        "required": true,
                        "example": 20
                    },
                    "height": {
                        "type": "number",
                        "required": true,
                        "example": 20
                    },
                    "width": {
                        "type": "number",
                        "required": true,
                        "example": 20
                    },
                    "depth": {
                        "type": "number",
                        "required": true,
                        "example": 20
                    },
                    "files": {
                        "type": "string",
                        "required": false,
                        "format": "binary"
                    },
                    "freeShipping": {
                        "type": "boolean",
                        "required": true,
                        "example": true
                    }
                }
            }
        },
        "securityDefinitions": {
            "JWT": {
                "description": "JWT token",
                "type": "apiKey",
                "in": "header",
                "name": "Authorization"
            }
        }
    }
